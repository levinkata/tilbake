@model IEnumerable<InsurerResource>

@{
    ViewData["Title"] = "Insurers";
}

<h1>@ViewData["Title"]</h1>

<div class="d-md-flex justify-content-md-end">
    <div class="form-group">
        <a asp-action="Create" class="btn btn-primary">New Insurer</a>
    </div>
</div>

@if (Model.Any())
{
    <table id="tblInsurer" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <caption>No records Found</caption>
}

<div>
    <a asp-controller="Home" asp-action="Index">Return</a>
</div>

