@model InvoiceResource

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-4 offset-md-8 bd-highlight mb-3">
    <div class="mr-auto p-2 bg-light">
        <h1>Invoice</h1>
        <dl class="row">
            <dt class="col-6">
                Date:
            </dt>
            <dd class="col-6">
                @Model.InvoiceDate.ToShortDateString()
            </dd>
            <dt class="col-6">
                Invoice Number:
            </dt>
            <dd class="col-6">
                @Html.DisplayFor(model => model.InvoiceNumber)
            </dd>
        </dl>
    </div>
</div>

<div>
    <h4>Invoice</h4>
    <div class="d-flex justify-content-md-end">
        <div class="form-group">
            <a asp-controller="Receivables" asp-action="Create" asp-route-invoiceId="@Model.Id" class="btn btn-primary">Receivables</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceStatus)
        </dd>
    </dl>
</div>

<div class="form-group">
    @await Component.InvokeAsync("Receivables", new { invoiceId = @Model.Id })
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
