        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaxAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaxAmount)
        </dd>
