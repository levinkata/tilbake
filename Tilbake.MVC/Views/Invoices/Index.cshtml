@model IEnumerable<InvoiceResource>

@{
    ViewData["Title"] = "Invoices";
}

<h1>@ViewData["Title"]</h1>

<div class="container border rounded-0 p-3 mb-3">
    <div class="row mb-2 justify-content-start">
        <div class="col-2">
            <span class="d-flex"><small>Overdue</small></span>
            <span><strong>P645,268.80</strong></span>
            <span class="text-black-50"><small>BWP</small></span>
        </div>
        <div class="col-3">

        </div>
        <div class="col-2">
            <span class="d-flex"><small>Due within next 30 days</small></span>
            <span><strong>P0.00</strong></span>
            <span class="text-black-50"><small>BWP</small></span>
        </div>
        <div class="col-3">

        </div>
        <div class="col-2">
            <span class="d-flex"><small>Average time to get paid</small></span>
            <span><strong>9</strong></span>
            <span class="text-black-50"><small>days</small></span>
        </div>
    </div>
    <div class="d-flex align-content-center">
        <span>Last updated </span><span>an hour ago</span>
    </div>
</div>

@if (Model.Any())
{

    <div>
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-unpaid-tab" data-bs-toggle="pill" data-bs-target="#pills-unpaid" type="button" role="tab" aria-controls="pills-unpaid" aria-selected="true">Unpaid<span class="badge bg-info ml-1">16</span></button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-draft-tab" data-bs-toggle="pill" data-bs-target="#pills-draft" type="button" role="tab" aria-controls="pills-draft" aria-selected="false">Draft<span class="badge bg-info ml-1">0</span></button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-all-tab" data-bs-toggle="pill" data-bs-target="#pills-all" type="button" role="tab" aria-controls="pills-all" aria-selected="false">All invoices</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-unpaid" role="tabpanel" aria-labelledby="pills-home-tab">
                No unpaid invoices.
            </div>
            <div class="tab-pane fade" id="pills-draft" role="tabpanel" aria-labelledby="pills-draft-tab">
                No draft invoices.
            </div>
            <div class="tab-pane fade" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
                <table id="tblInvoice" class="display">
                    <thead>
                        <tr>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.InvoiceNumber)</strong>
                            </th>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.FullName)</strong>
                            </th>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.InvoiceDate)</strong>
                            </th>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.InvoiceDueDate)</strong>
                            </th>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.Amount)</strong>
                            </th>
                            <th>
                                <strong>@Html.DisplayNameFor(model => model.InvoiceStatus)</strong>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDueDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceStatus)
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-outline-info rounded-circle dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">View</a></li>
                                            <li><a class="dropdown-item" href="#">Edit</a></li>
                                            <li><a class="dropdown-item" href="#">Duplicate</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="#">Record payment</a></li>
                                            <li><a class="dropdown-item" href="#">Resend</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="#">Export as PDF</a></li>
                                            <li><a class="dropdown-item" href="#">Print</a></li>
                                            <li><a class="dropdown-item" href="#">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


}
else
{
    <caption>No Records Found</caption>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblInvoice').DataTable();
        });
    </script>
}