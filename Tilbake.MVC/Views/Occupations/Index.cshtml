@model IEnumerable<OccupationResource>

@{
    ViewData["Title"] = "Occupations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <div class="form-group">
        <a asp-action="Create" class="btn btn-primary"><i class="far fa-plus-square"></i></a>
    </div>
</div>

@if(Model.Any())
            {
<table id="tlbOccupation" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
            } else
            {
                <caption>No records Found</caption>
            }


@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tlbOccupation').DataTable();
        });
    </script>

}
