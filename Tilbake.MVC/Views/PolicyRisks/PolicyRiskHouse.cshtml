@model HouseResource

@{
    ViewData["Title"] = "QuoteHouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>House</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHouse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PolicyRiskId" />
            <div class="form-group">
                <label asp-for="PhysicalAddress" class="control-label"></label>
                <input asp-for="PhysicalAddress" class="form-control" />
                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidenceTypeId" class="control-label"></label>
                <select asp-for="ResidenceTypeId" class="form-control" asp-items="Model.ResidenceTypeList"></select>
                <span asp-validation-for="ResidenceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoofTypeId" class="control-label"></label>
                <select asp-for="RoofTypeId" class="form-control" asp-items="Model.RoofTypeList"></select>
                <span asp-validation-for="RoofTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WallTypeId" class="control-label"></label>
                <select asp-for="WallTypeId" class="form-control" asp-items="Model.WallTypeList"></select>
                <span asp-validation-for="WallTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseConditionId" class="control-label"></label>
                <select asp-for="HouseConditionId" class="form-control" asp-items="Model.HouseConditionList"></select>
                <span asp-validation-for="HouseConditionId" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BurglarAlarm" /> @Html.DisplayNameFor(model => model.BurglarAlarm)
                </label>
            </div>
            <div class="form-group form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BurglarBars" /> @Html.DisplayNameFor(model => model.BurglarBars)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

