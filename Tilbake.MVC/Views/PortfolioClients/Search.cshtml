@model IEnumerable<ClientResource>
@{
    ViewData["Title"] = ViewData["PortfolioName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
    var portfolioId = ViewData["PortfolioId"];
}

<h1>@ViewData["Title"]</h1>
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Search" asp-route-portfolioId="@ViewData["PortfolioId"]" method="get">
    <input type="hidden" name="portfolioId" value="@ViewData["PortfolioId"]" />
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Search">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Client Number</strong>
            </th>
            <th>
                <strong>First Name</strong>
            </th>
            <th>
                <strong>Last Name</strong>
            </th>
            <th>
                <strong>Id Number</strong>
            </th>
            <th>
                <strong>Email</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex border border-primary justify-content-end">
    <div class="form-outline">
        <input id="SearchString" type="search" placeholder="Enter Keywords?" class="form-control"/>
    </div>
    <button type="button" id="SearchButton" class="btn btn-primary">
        <i class="fas fa-search"></i>
    </button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}