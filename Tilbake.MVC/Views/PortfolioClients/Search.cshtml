@model PortfolioResource
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />

<div class="d-flex border border-primary justify-content-end">
    <div class="form-outline">
        <select id="Category" name="Category" class="form-control">
        <option placeholder="">Category</option>
        <option>Client Number</option>
        <option>Name</option>
        <option>Id Number</option>
        </select>
    </div>
    <div class="form-outline">
        <input id="search" type="search" placeholder="Enter Keywords?" class="form-control"/>
    </div>
    <button type="button" class="btn btn-primary">
        <i class="fas fa-search"></i>
    </button>
</div>
<div class="card mb-3">
    <div class="card-body">
        <table id="tblClient" class="table">
            <thead>
                <tr>
                    <th>
                        <strong>Client Number</strong>
                    </th>
                    <th>
                        <strong>First Name</strong>
                    </th>
                    <th>
                        <strong>Last Name</strong>
                    </th>
                    <th>
                        <strong>Id Number</strong>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}