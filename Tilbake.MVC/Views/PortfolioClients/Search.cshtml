@model PortfolioClientSearchResource
@{
    ViewData["Title"] = ViewData["PortfolioName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<p>
    <a asp-action="Create" asp-route-portfolioId="@Model.PortfolioId">Create New</a>
</p>

<form asp-action="Search" method="get">
    <input type="hidden" asp-for="PortfolioId" />
    <div class="form-inline border border-primary justify-content-end text-right">  
        <label asp-for="SearchString" style="display: block; padding-right: 10px; text-align: right;">Enter search string: </label>        
        <input type="search" asp-for="SearchString" placeholder="Enter Keywords?" class="form-control" />        
        <button type="submit" id="SearchButton" class="btn btn-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Client Number</strong>
            </th>
            <th>
                <strong>First Name</strong>
            </th>
            <th>
                <strong>Last Name</strong>
            </th>
            <th>
                <strong>Id Number</strong>
            </th>
            <th>
                <strong>Email</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClientResources) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-portfolioId="@Model.PortfolioId" asp-route-clientId="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}