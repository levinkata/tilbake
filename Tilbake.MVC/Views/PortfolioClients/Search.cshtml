@model PortfolioClientSearchResource
@{
    ViewData["Title"] = Model.PortfolioName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />

<div class="card mb-3">
    <div class="card-body p-0">
        <form asp-action="Search" method="get">
            <input type="hidden" asp-for="PortfolioId" />
            <div class="form-inline justify-content-end text-right">
                <label asp-for="SearchString" class="pe-3 text-right">Enter search string: </label>  
                <input type="search" asp-for="SearchString" placeholder="Enter Keywords?" class="form-control" />        
                <button type="submit" id="SearchButton" class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="col">
                <h5 class="mb-0 py-2">Clients</h5>
            </div>
            <div class="col text-end ps-2">
                <a asp-action="Create" asp-route-portfolioId="@Model.PortfolioId" class="btn btn-outline-secondary btn-sm">
                    <span class="fas fa-plus"></span> New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm mb-0 overflow-hidden">
            <thead>
                <tr>
                    <th class="px-3 align-middle">
                        <strong>Client Number</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>First Name</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>Last Name</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>Id Number</strong>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.ClientResources) {
                <tr>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.ClientNumber)
                    </td>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.IdNumber)
                    </td>
                    <td class="align-middle text-end">
                        <a asp-action="Details" asp-route-portfolioId="@Model.PortfolioId" asp-route-clientId="@item.Id" class="btn btn-link btn-sm dropdown text-reset"><span class="fas fa-ellipsis-h text-muted"></span></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}