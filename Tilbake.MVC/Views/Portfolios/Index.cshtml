@model IEnumerable<PortfolioResource>
@using Syncfusion.EJ2

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="control-section">
    <ejs-grid id="Grid" allowSorting="true" dataSource="ViewBag.datasource" toolbar="@(new List<string>() {"Search" })" allowPaging="true">
        <e-grid-pagesettings pageCount="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="" type="checkbox" width="30" allowFiltering="false" allowSorting="false"></e-grid-column>
            <e-grid-column field="Id" headerText="Id" textAlign="Left" visible="false"></e-grid-column>
            <e-grid-column field="Name" headerText="Name" width="80"></e-grid-column>
            <e-grid-column field="Description" headerText="Description" width="100"></e-grid-column>
            <e-grid-column field="IsScheme" headerText="Is Scheme?" template="#template" width="30"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>

