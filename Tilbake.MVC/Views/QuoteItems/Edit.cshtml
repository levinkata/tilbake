@model QuoteItemResource

@{
    ViewData["Title"] = "Portfolio Name";
}

<h1>@ViewData["Title"]</h1>

<h4>Client Name</h4>
<hr />

<div class="d-flex justify-content-center">
    <div class="col-md-9">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="QuoteId" />
            <input type="hidden" asp-for="ClientRiskId" />
            <div class="card mb-3">
                <div class="card-header">
                   <div class="d-flex justify-content-between">
                        <h5>Edit Quote Item</h5>
                        <h5 class="fw-bold">@Model.Quote.QuoteNumber</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="SumInsured" class="control-label"></label>
                                <input asp-for="SumInsured" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Premium" class="control-label"></label>
                                <input asp-for="Premium" class="form-control" />
                                <span asp-validation-for="Premium" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="CoverTypeId" class="control-label"></label>
                                <select asp-for="CoverTypeId" class="form-control" asp-items="Model.CoverTypeList"></select>
                                <span asp-validation-for="CoverTypeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Excess" class="control-label"></label>
                            <input asp-for="Excess" class="form-control" />
                            <span asp-validation-for="Excess" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-secondary" />
                    </div>
                </div>
            </div>
        </form>
        <div>
            <a asp-controller="Quotes" asp-action="Details" asp-route-id="@Model.QuoteId">Return</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
