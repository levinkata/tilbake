                    Quote: quote,
                    QuoteItems: quoteItems,
                    AllRisks: allRisks,
                    AllRiskSpecifieds: allRiskSpecifieds,
                    Buildings: buildings,
                    Contents: contents,
                    Houses: houses,
                    Motors: motors,
                    RiskItems: riskItems
                }

                $.ajax({
                    url: '@(Url.Action("PostQuote"))',
                    type: "POST",
                    dataType: "json",
                    data: { quoteObject: QuoteObject },
                    error: function (xhr, status, error) {
                        alert("An error has occured." + error);
                    },
                    success: function (data) {
                        QuoteObject = [];
                        window.location.href ='/Quotes/PortfolioClientQuotes?portfolioClientId=' +  portfolioClientId;
                    }
                });
            }
        }

        function DeleteCart(clientRiskId) {
            
            if (clientRiskId) {
                var cartItem = $('#tblQuote').find('tr[data-client-risk-id=' + clientRiskId + ']');
                cartItem.remove();

                if (allRisks.length != 0) {
                    allRisks = allRisks.filter(function (obj) {
