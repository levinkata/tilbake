        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteItems.FirstOrDefault().SumInsured)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteItems.FirstOrDefault().Premium)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteItems.FirstOrDefault().Excess)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.QuoteItems)
            {
                @*if (item.InsurerName != InsurerName)
                    {
                        InsurerName = item.InsurerName;
                        if (SubPremium > 0)
                        {
                            <tr>
                                <td><strong>Total</strong></td>
                                <td></td>
                                <td></td>
                                <td><strong>@SubPremium</strong></td>
                                <td></td>
                            </tr>
                            SubPremium = 0;
                        }
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.InsurerName)</strong>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                    if (item.Product.Name != ProductName)
                    {
                        ProductName = item.Product.Name;
                        <tr>
                            <td><strong>@ProductName</strong></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }*@

                <tr>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SumInsured)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Premium)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Excess)
                    </td>
                </tr>
                SubPremium += item.Premium;
            }

            @if (SubPremium > 0)
            {
                <tr>
                    <td><strong>Total</strong></td>
                    <td></td>
                    <td></td>
                    <td><strong>@SubPremium</strong></td>
                    <td></td>
                </tr>
