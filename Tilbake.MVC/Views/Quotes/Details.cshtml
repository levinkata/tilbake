@model QuoteResource

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var SubPremium = 0M;
}

<h1>Details</h1>

<div>
    <h4>Quote</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuoteNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuoteNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuoteDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuoteDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InternalInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InternalInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuoteStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuoteStatus)
        </dd>
    </dl>
</div>

@if (Model.QuoteItems.Any())
{
