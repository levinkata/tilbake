@model QuoteResource

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit</h4>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="QuoteDate" class="control-label"></label>
                <input asp-for="QuoteDate" class="form-control" />
                <span asp-validation-for="QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteStatusId" class="control-label"></label>
                <select asp-for="QuoteStatusId" asp-items="@Model.QuoteStatusList" class="form-control" />
                <span asp-validation-for="QuoteStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientInfo" class="control-label"></label>
                <input asp-for="ClientInfo" class="form-control" />
                <span asp-validation-for="ClientInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InternalInfo" class="control-label"></label>
                <input asp-for="InternalInfo" class="form-control" />
                <span asp-validation-for="InternalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="PortfolioClient" asp-action="Details" asp-route-id="@Model.Id">Return</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}