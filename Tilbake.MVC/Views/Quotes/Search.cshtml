@model QuoteSearchResource
@{
    ViewData["Title"] = Model.PortfolioName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<div class="card mb-3">
    <div class="card-body p-0">
        <form asp-action="Search" method="get">
            <input type="hidden" asp-for="PortfolioId" />
            <div class="form-inline justify-content-end text-right">
                <label asp-for="SearchString" class="pe-3 text-right">Enter search string: </label>  
                <input type="search" asp-for="SearchString" placeholder="Enter Keywords?" class="form-control" />        
                <button type="submit" id="SearchButton" class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="col">
                <h5 class="mb-0 py-2">Quotations</h5>
            </div>
            <div class="col text-end ps-2">
                <a asp-action="Create" asp-route-portfolioId="@Model.PortfolioId" class="btn btn-outline-secondary btn-sm">
                    <span class="fas fa-plus"></span> New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm mb-0 overflow-hidden">
            <thead>
                <tr>
                    <th class="px-3 align-middle">
                        <strong>Quote Number</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>Quote Date</strong>
                    </th>                    
                    <th class="px-3 align-middle">
                        <strong>First Name</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>Last Name</strong>
                    </th>
                    <th class="px-3 align-middle">
                        <strong>Status</strong>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.QuoteResources) {
                <tr>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.QuoteNumber)
                    </td>
                    <td class="px-3 align-middle">
                        @item.QuoteDate.ToString("dd/MM/yyyy")
                    </td>                    
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.Client.FirstName)
                    </td>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.Client.LastName)
                    </td>
                    <td class="px-3 align-middle">
                        @Html.DisplayFor(modelItem => item.QuoteStatus.Name)
                    </td>
                    <td class="align-middle text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link btn-sm dropdown text-reset">
                            <span class="fas fa-ellipsis-h text-muted"></span>
                        </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Quote Number</strong>
            </th>
            <th>
                <strong>Quote Date</strong>
            </th>
            <th>
                <strong>Last Name</strong>
            </th>
            <th>
                <strong>First Name</strong>
            </th>
            <th>
                <strong>Status</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuoteResources) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteNumber)
            </td>
            <td>
                @item.QuoteDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteStatus.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}