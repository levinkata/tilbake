@model RatingMotorResource

@{
    ViewData["Title"] = Model.Insurer.Name;
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this rating?</h3>
<div>
    <h4>Delete</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RateLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RateLocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-insurerId="@Model.InsurerId">Return</a>
    </form>
</div>
