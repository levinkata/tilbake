@model IEnumerable<ClientDocumentResource>

@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}
else
{
    <caption>Client Documents</caption>
    <table class="tilbake-table tilbake-table-rounded">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>File Type</th>
                <th>Document Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
            <tr>
                <td>@file.Name</td>
                <td>@file.Description</td>
                <td>@file.FileType</td>
                <td>@file.DocumentDate</td>
                <td>
                    <a class="btn btn-primary" type="button" asp-controller="ClientDocuments" asp-action="DownloadFile" asp-route-id="@file.Id">Download</a>
                    <a class="btn btn-danger" type="button" asp-controller="ClientDocuments" asp-action="Delete" asp-route-id="@file.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}