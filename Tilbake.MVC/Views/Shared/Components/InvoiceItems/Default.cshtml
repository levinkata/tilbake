@model IEnumerable<InvoiceItemResource>

@if (Model.Any())
{
    <div class="form-group">
        <table id="tblInvoiceItems" class="table">
            <thead>
                <tr>
                    <th>
                        <strong>Description</strong>
                    </th>
                    <th>
                        <strong>Cover Type</strong>
                    </th>
                    <th>
                        <strong>Sum Insured</strong>
                    </th>
                    <th>
                        <strong>Premium</strong>
                    </th>
                    <th>
                        <strong>Excess</strong>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="InvoiceItems" asp-action="InvoiceItemRisk" asp-route-invoiceItemId="@item.Id">@item.PolicyRisk.Description</a>
                        </td>
                        <td>@item.PolicyRisk.CoverType.Name</td>
                        <td>@item.PolicyRisk.SumInsured</td>
                        <td>@item.PolicyRisk.Premium</td>
                        <td>@item.PolicyRisk.Excess</td>
                        <td>
                            <a asp-controller="InvoiceItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-controller="InvoiceItems" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-controller="InvoiceItems" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <caption>No Records Found</caption>

}