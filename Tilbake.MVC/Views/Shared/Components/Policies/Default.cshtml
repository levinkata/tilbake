@model IEnumerable<PolicyResource>

@if (Model.Any())
{
    <table id="tlbPolicy" class="table">
        <thead>
            <tr>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.PolicyNumber)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.Insurer)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.CoverStartDate)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.CoverEndDate)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.PolicyStatus)</strong>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Policies" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.PolicyNumber)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Insurer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoverStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoverEndDate)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.PolicyStatus)
                    </td>
                    <td>
                        <a asp-controller="Policies" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |<i class="fas fa-edit"></i>
                        <a asp-controller="Policies" asp-action="Delete" asp-route-id="@item.Id">Delete</a><i class="fas fa-trash"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <caption>No Records Found</caption>
}
