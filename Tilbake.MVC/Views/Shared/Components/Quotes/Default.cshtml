@model IEnumerable<QuoteResource>

@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuoteStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteStatus)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
