@model IEnumerable<QuoteResource>

@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}
else
{
    <table id="tlbQuote" class="table">
        <thead>
            <tr>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.QuoteNumber)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.QuoteDate)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.QuoteStatus)</strong>
                </th>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.Insurer)</strong>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Insurer)
                    </td>
                    <td>
                        <a asp-controller="Quotes" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Quotes" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Quotes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
