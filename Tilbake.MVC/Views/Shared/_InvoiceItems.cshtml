@model IEnumerable<InvoiceItemViewModel>

@if (Model.Any())
{
    <div class="form-group">
        <table id="tblInvoiceItems" class="table">
            <thead>
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Cover Type
                    </th>
                    <th>
                        Sum Insured
                    </th>
                    <th>
                        Premium
                    </th>
                    <th>
                        Excess
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="InvoiceItems" asp-action="InvoiceItemRisk" asp-route-invoiceItemId="@item.Id">@item.PolicyRisk.Description</a>
                        </td>
                        <td>@item.PolicyRisk.CoverType.Name</td>
                        <td>@item.PolicyRisk.SumInsured</td>
                        <td>@item.PolicyRisk.Premium</td>
                        <td>@item.PolicyRisk.Excess</td>
                        <td class="justify-content-end">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary rounded-circle dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="InvoiceItems" asp-action="Details" asp-route-id="@item.Id">View</a></li>
                                    <li><a class="dropdown-item" asp-controller="InvoiceItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Print</a></li>
                                    <li><a class="dropdown-item" asp-controller="InvoiceItems"asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <caption>No Records Found</caption>

}